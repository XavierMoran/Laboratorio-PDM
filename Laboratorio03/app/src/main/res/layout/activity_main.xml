<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Cantidad de dinero"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contaofnumbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="0.0"
        android:textColor="#000000"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageView
        android:id="@+id/fives_cents"
        android:layout_width="137dp"
        android:layout_height="126dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="44dp"
        app:layout_constraintEnd_toStartOf="@+id/tens_cents"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contaofnumbers"
        app:srcCompat="@drawable/five_cents" />

    <ImageView
        android:id="@+id/tens_cents"
        android:layout_width="137dp"
        android:layout_height="123dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contaofnumbers"
        app:srcCompat="@drawable/ten_cents" />

    <ImageView
        android:id="@+id/quarters"
        android:layout_width="138dp"
        android:layout_height="125dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toStartOf="@+id/one_dollars"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fives_cents"
        app:srcCompat="@drawable/quarter" />

    <ImageView
        android:id="@+id/one_dollars"
        android:layout_width="140dp"
        android:layout_height="126dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/quarters"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/one_dollar" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0.05"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/fives_cents"
        app:layout_constraintStart_toStartOf="@+id/fives_cents"
        app:layout_constraintTop_toBottomOf="@+id/fives_cents" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="$0.10"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tens_cents"
        app:layout_constraintStart_toStartOf="@+id/tens_cents"
        app:layout_constraintTop_toBottomOf="@+id/tens_cents" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0.25"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/quarters"
        app:layout_constraintStart_toStartOf="@+id/quarters"
        app:layout_constraintTop_toBottomOf="@+id/quarters" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$1"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/one_dollars"
        app:layout_constraintStart_toStartOf="@+id/one_dollars"
        app:layout_constraintTop_toBottomOf="@+id/one_dollars" />
</androidx.constraintlayout.widget.ConstraintLayout>